@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        loadUserInfo();
    });

    function loadUserInfo(d2) {
        var error = false;
        if (d2 != null) {
            if (d2.UpdateStatus == "Success") alert("User information updated successfully!");
            else alert("Error updating user information!");
        }
        $.ajax({
            type: 'GET',
            url: '/User/EditUserProfile',
            dataType: 'html',
            success: function (data) {
                var frame = $('#EditCloseUserInfo');
                var display = frame.css('display');
                $('#userEditor').html(data);
                if (error) showUserInfo();

            }
        });
    }
</script>
