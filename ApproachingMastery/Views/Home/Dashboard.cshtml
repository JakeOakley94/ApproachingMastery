@using DatabaseInteraction.Models
@model UserLogin

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script src="~/js/jquery-1.11.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/datepicker3.css" rel="stylesheet">
    <link href="~/Content/styles.css" rel="stylesheet">
    <!--Custom Font-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

}
<script src="~/Scripts/DashboardAjax.js"></script>


<style>
    .modal-backdrop.in {
        z-index: auto;
    }
</style>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">


    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Dashboard</h1>
        </div>
    </div><!--/.row-->

    <div class="panel panel-container">
        <div class="row">
            <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
                <div class="panel panel-teal panel-widget border-right">
                    <div class="row no-padding">
                        <em class="fas fa-chalkboard-teacher fa-2x color-blue "></em>
                        <div class="large">@ViewBag.TeacherCount</div>
                        <div class="">Teachers</div>
                    </div>
                </div>
            </div>

            <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
                <div class="panel panel-blue panel-widget border-right">
                    <div class="row no-padding">
                        <em class="fas fa-user-graduate fa-2x color-red"></em>
                        <div class="large" id="studentCount"></div>
                        <div class="">Students</div>
                    </div>
                </div>
            </div>
            <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
                <div class="panel panel-orange panel-widget border-right">
                    <div class="row no-padding">
                        <em class="fas fa-tasks fa-2x color-green"></em>                
                        <div class="large">@ViewBag.GoalCompleteCount</div>
                        <div class="">Goals Met</div>
                    </div>
                </div>
            </div>
            <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
                <div class="panel panel-red panel-widget ">
                    <div class="row no-padding">
                        <em class="fas fa-edit fa-2x color-orange"></em>

                        <div class="large">@ViewBag.PendingGoalCount</div>
                        <div class="">Goals Pending</div>
                    </div>
                </div>
            </div>
        </div><!--/.row-->
    </div>

    <!-- END TOP TABS -->
    <!-- START STUDENT TABLE -->

    <div class="panel panel-default">
        <div class="panel-heading">
            Students

            <span class="pull-right clickable panel-toggle panel-button-tab-left"><em class="fa fa-toggle-up"></em></span>
        </div>

        <div class="panel-body" id="studentViewer" style="text-align:center;">
            <div style="display:inline-block;text-align:center;" id="getStudentsLoading" hidden="hidden">
                <i class='fa fa-circle-o-notch fa-spin fa-5x'></i><br />Loading Please Wait...
            </div>
            <div id="getStudents">

               

            </div>
        </div>
    </div>

    <!-- END STUDENT TABLE -->
    <!-- START OTHER TEACHERS-->


    <div class="panel panel-default">
        <div class="panel-heading">
            Other Teachers

            <span class="pull-right clickable panel-toggle panel-button-tab-left"><em class="fa fa-toggle-up"></em></span>
        </div>
        <div class="panel-body">

            <div class="w3-container">

                @{ Html.RenderAction("GetTeachers", "User");}

            </div>

            <div class="panel-footer">
                <div class="input-group">

                </div>
            </div>
        </div>
    </div>

    <!-- END OTHER TEACHERS-->
    <!-- START Calendar-->

    <div class="panel panel-default" id="calendarDiv" style="width: 50%;">
        <div class="panel-heading">
            Calendar
            <span class="pull-right clickable panel-toggle panel-button-tab-left"><em class="fa fa-toggle-up"></em></span>
        </div>
        <div class="panel-body">
            <div class="w3-container">

                @{ Html.RenderAction("GetCalendar", "User");}

            </div>
            <div class="panel-footer">
                <div class="input-group">
                </div>
            </div>
        </div>
    </div>
    <!-- END Calendar-->

</div>

<script src="~/js/jquery-1.11.1.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/bootstrap-datepicker.js"></script>
<script src="~/js/custom.js"></script>

<div id="addStudentModal" class="modal">
    <div class="modal-dialog" id="addStudentContent">
    </div>

</div>

<div id="EditStudentModal" class="modal">
    <div class="modal-dialog" id="editStudentContent">
    </div>
</div>


